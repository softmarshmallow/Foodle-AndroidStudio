<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px">

    <ImageView
        android:id="@+id/exitButton"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_x"
        android:tint="@color/colorDark"
        android:layout_marginLeft="24dp"/>

    <TextView
        android:layout_width="210dp"
        android:layout_height="70dp"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="24dp"
        android:text="설정"
        android:textColor="@color/nomaltext"
        android:textSize="30dp"
        android:textStyle="bold"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <com.softmarshmallow.foodle.CustomViews.OptionItemView.OptionItemView
                    android:id="@+id/CreateStoreButton"
                    android:layout_width="match_parent"
                    android:background="@android:color/white"
                    android:layout_height="wrap_content"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    app:optionImage="@drawable/ic_right_arrow"
                    app:optionNameText="푸드트럭 등록하기"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp"/>

                <com.softmarshmallow.foodle.CustomViews.OptionItemView.OptionItemView
                    android:id="@+id/StoreUploadRequestButton"
                    android:layout_width="match_parent"
                    android:background="@android:color/white"
                    android:layout_height="wrap_content"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    app:optionImage="@drawable/ic_right_arrow"
                    app:optionNameText="푸드트럭 등록 신청"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp"/>

                <com.softmarshmallow.foodle.CustomViews.OptionItemView.OptionItemView
                    android:id="@+id/LogoutButton"
                    android:layout_width="match_parent"
                    android:background="@android:color/white"
                    android:layout_height="wrap_content"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    app:optionNameText="로그 아웃"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp"/>
                <com.softmarshmallow.foodle.CustomViews.OptionItemView.OptionItemView
                    android:id="@+id/CheckButton"
                    android:layout_width="match_parent"
                    android:background="@android:color/white"
                    android:layout_height="wrap_content"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    app:optionNameText="Version 1.0 (19)"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp"/>


            </LinearLayout>



        </LinearLayout>
    </ScrollView>

</LinearLayout>