<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:minHeight="25px"
                android:minWidth="25px"
                map:layout_constraintBottom_toTopOf="@+id/view9"
                map:layout_constraintLeft_toLeftOf="parent"
                map:layout_constraintTop_toBottomOf="@+id/textView14"
                android:layout_marginStart="8dp">

                <EditText
                    android:id="@+id/storeNameTextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="StoreName"
                    />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="푸드트럭 이름"
                android:textSize="30sp"
                map:layout_constraintLeft_toLeftOf="parent"
                map:layout_constraintTop_toTopOf="parent"/>


            <View
                android:layout_width="344dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                map:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="8dp"
                android:id="@+id/view9"/>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <View
                android:id="@+id/view4"
                android:layout_width="344dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                map:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="8dp"/>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="프로모션 한줄"
                android:textSize="30sp"
                map:layout_constraintLeft_toLeftOf="parent"
                map:layout_constraintTop_toTopOf="parent"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:minHeight="25px"
                android:minWidth="25px"
                map:layout_constraintBottom_toTopOf="@+id/view4"
                map:layout_constraintLeft_toLeftOf="parent"
                map:layout_constraintTop_toBottomOf="@+id/textView15"
                android:layout_marginStart="8dp">

                <EditText
                    android:id="@+id/storeShortDescriptionTextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="StoreShortDescription"/>
            </android.support.design.widget.TextInputLayout>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/view7"
                android:layout_width="344dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                map:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="8dp"/>

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="상세 설명"
                android:textSize="30sp"
                map:layout_constraintLeft_toLeftOf="parent"
                map:layout_constraintTop_toTopOf="parent"/>


            <android.support.design.widget.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:minHeight="25px"
                android:minWidth="25px"
                map:layout_constraintBottom_toTopOf="@+id/view7"
                map:layout_constraintLeft_toLeftOf="parent"
                map:layout_constraintTop_toBottomOf="@+id/textView22"
                android:layout_marginStart="8dp">

                <EditText
                    android:id="@+id/storeFullDescriptionTextField"
                    android:layout_width="match_parent"
                    android:layout_height="104dp"
                    android:hint="StoreFullDescription"
                    android:inputType="textMultiLine"
                    android:singleLine="false"/>

            </android.support.design.widget.TextInputLayout>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <View
                android:id="@+id/view8"
                android:layout_width="344dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                map:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="8dp"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="위치"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="30sp"
                map:layout_constraintLeft_toLeftOf="parent"
                map:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/storeAddressTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:text="선택된 위치가 없습니다"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                map:layout_constraintLeft_toLeftOf="parent"
                map:layout_constraintRight_toRightOf="parent"
                map:layout_constraintTop_toBottomOf="@+id/textView"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/storeChooseLocationButtonView"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                app:fb_borderColor="@color/colorPrimaryDark"
                app:fb_borderWidth="1dp"
                app:fb_defaultColor="#0000"
                app:fb_focusColor="@color/colorPrimaryDark"
                app:fb_radius="10dp"
                app:fb_text="위치를 알려주세요"
                app:fb_textColor="@color/colorPrimaryDark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                map:layout_constraintHorizontal_bias="0.0"
                map:layout_constraintTop_toBottomOf="@+id/storeAddressTextView"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <View
                android:layout_width="344dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                map:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="8dp"
                android:layout_marginTop="24dp"
                map:layout_constraintTop_toBottomOf="@+id/storePhotoImageView"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="사진"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="30sp"
                map:layout_constraintLeft_toLeftOf="parent"
                map:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/storePhotoImageView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="32dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_foodtruck_featuregraphic"
                map:layout_constraintDimensionRatio="w,1:1"
                map:layout_constraintHorizontal_bias="0.0"
                map:layout_constraintLeft_toLeftOf="parent"
                map:layout_constraintRight_toRightOf="parent"
                />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/view10"
                android:layout_width="344dp"
                android:layout_height="1dp"
                android:layout_marginTop="32dp"
                android:background="@android:color/darker_gray"
                map:layout_constraintBottom_toBottomOf="parent"
                map:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
                map:layout_constraintVertical_bias="1.0"
                tools:layout_editor_absoluteX="8dp"/>

            <TextView
                android:id="@+id/textView24"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="전화번호"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="30sp"
                map:layout_constraintLeft_toLeftOf="parent"
                map:layout_constraintTop_toTopOf="parent"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:minHeight="25px"
                android:minWidth="25px"
                map:layout_constraintHorizontal_bias="0.0"
                map:layout_constraintLeft_toLeftOf="parent"
                map:layout_constraintRight_toRightOf="parent"
                map:layout_constraintTop_toBottomOf="@+id/textView24"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">

                <EditText
                    android:id="@+id/storePhoneNumberEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:hint="phonenumber"
                    android:inputType="phone"/>
            </android.support.design.widget.TextInputLayout>
        </android.support.constraint.ConstraintLayout>


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="344dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                map:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="8dp"/>

            <TextView
                android:id="@+id/textView25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="추가 연락처"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="30sp"
                map:layout_constraintLeft_toLeftOf="parent"
                map:layout_constraintTop_toTopOf="parent"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:minHeight="25px"
                android:minWidth="25px"
                map:layout_constraintHorizontal_bias="0.0"
                map:layout_constraintLeft_toLeftOf="parent"
                map:layout_constraintRight_toRightOf="parent"
                map:layout_constraintTop_toBottomOf="@+id/textView25">

                <EditText
                    android:id="@+id/storeExtraContactInfoEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:hint="extra contact infos"
                    android:inputType="textMultiLine"/>
            </android.support.design.widget.TextInputLayout>

        </android.support.constraint.ConstraintLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="1"/>

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/moveNextButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:fb_borderColor="@color/colorPrimaryDark"
            app:fb_borderWidth="1dp"
            app:fb_defaultColor="#0000"
            app:fb_focusColor="@color/colorPrimaryDark"
            app:fb_radius="20dp"
            app:fb_text="다음"
            app:fb_textColor="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        </mehdi.sakout.fancybuttons.FancyButton>

        <Space
            android:layout_width="match_parent"
            android:layout_height="53dp"/>

    </LinearLayout>
</ScrollView>