<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:clipChildren="true"
                                    android:clipToPadding="true"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:minHeight="25px"
                                    android:minWidth="25px"
                                    android:orientation="vertical"
                                    card_view:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="25px"
        android:minWidth="25px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/mainStorePhotoImageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_foodtruck_featuregraphic"
                app:riv_corner_radius="10dp"/>

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16.0dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/storeNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2.0dp"
                    android:text="StoreName"
                    android:textAppearance="@android:style/TextAppearance.Material.Subhead"
                    android:textColor="#ff7f7f7f"/>

                <TextView
                    android:id="@+id/storeShortDescriptionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="18.5dp"
                    android:layout_marginBottom="0.0dp"
                    android:layout_marginRight="13.0dp"
                    android:layout_marginTop="4.5dp"
                    android:text="StoreShortDescription"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#ff9e9e9e"/>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dp"
                    android:minHeight="25px"
                    android:minWidth="25px"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_menu_gallery"/>

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_menu_gallery"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--    <ImageView
                android:src="@drawable/searchresultitem1"
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />-->
    </RelativeLayout>
</android.support.v7.widget.CardView>