<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.TextInputLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/eventNameTextField"
                android:hint="Event Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/eventShortDescriptionTextField"
                android:hint="event Short Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/eventFullDescriptionTextField"
                android:hint="event Full Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.gms.maps.MapView
                android:id="@+id/locationPreviewMap"
                android:layout_width="200dp"
                android:layout_height="200dp"
                map:cameraZoom="15"
                map:mapType="normal"
                map:liteMode="true" />
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:text="Large Text"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/eventAddressTextView"
                    android:layout_width="183.5dp"
                    android:layout_height="45.0dp" />
                <TextView
                    android:text="Medium Text"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/eventCoordinateTextView" />
                <Button
                    android:text="Choose Location"
                    android:id="@+id/chooseEventLocationButtonView"
                    android:textAllCaps="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:text="Choose Image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chooseEventImagesButton"
            android:textAllCaps="false" />
        <TextView
            android:text="Event icon"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/demo_foodtruck_real_image"
            android:layout_width="match_parent"
            android:layout_height="335.0dp"
            android:id="@+id/eventIconImageView" />
        <TextView
            android:text="Event Feautre graphic"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/demo_foodtruck_real_image"
            android:layout_width="match_parent"
            android:layout_height="353.0dp"
            android:id="@+id/eventFeatureGraphicImageView" />
        <android.support.design.widget.TextInputLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:inputType="phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/eventPhoneNumberEditText" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/eventExtraContanctInfoEditText" />
        </android.support.design.widget.TextInputLayout>
        <Button
            android:text="Create Event"
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:id="@+id/createEventButton" />
    </LinearLayout>
</ScrollView>