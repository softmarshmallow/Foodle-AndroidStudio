<?xml version="1.0" encoding="utf-8"?>
<com.yalantis.taurus.PullToRefreshView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pull_to_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:type="sun">
<android.support.v4.widget.NestedScrollView
                                            android:minWidth="25px"
                                            android:minHeight="25px"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@color/viewBg"
                                            app:layout_behavior="@string/appbar_scrolling_view_behavior"
                                            >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.daimajia.slider.library.SliderLayout
            android:id="@+id/promotionImageSlider"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/featuredStoresContainer">

            <LinearLayout
                android:id="@+id/Nearby_TitleContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12.0dp"
                android:layout_marginLeft="8.7dp"
                android:layout_marginRight="15.0dp"
                android:layout_marginTop="14.7dp"
                android:gravity="center_vertical"
                android:minHeight="25px"
                android:minWidth="25px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="21.7dp"
                    android:layout_height="27.3dp"
                    android:src="@drawable/you_are_here"/>

                <TextView
                    android:id="@+id/foodtrucksNearbyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14.7dp"
                    android:text="내주변 푸드트럭"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="30sp"/>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/NearbyStoresRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/themesContainer">

            <LinearLayout
                android:id="@+id/Themes_TitleContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12.5dp"
                android:layout_marginLeft="8.7dp"
                android:layout_marginRight="15.0dp"
                android:layout_marginTop="14.7dp"
                android:gravity="center_vertical"
                android:minHeight="25px"
                android:minWidth="25px"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="21.7dp"
                    android:layout_height="27.3dp"
                    android:src="@drawable/home_icon"
                    />

                <TextView
                    android:id="@+id/themesTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14.7dp"
                    android:text="themes"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="30sp"/>
            </LinearLayout>
            <ImageView
                android:src="@drawable/category1_mockup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/categoryItem1"
                android:scaleType="fitXY"
                android:adjustViewBounds="true" />
            <ImageView
                android:src="@drawable/category2_mockup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/categoryItem2"
                android:scaleType="fitXY"
                android:adjustViewBounds="true" />
            <ImageView
                android:src="@drawable/category3_mockup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/categoryItem3"
                android:scaleType="fitXY"
                android:adjustViewBounds="true" />
        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/featuredStoresRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18.0dp"
            tools:listitem="@layout/card_store_list_item"/>

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topMenusContainer"
            android:layout_marginLeft="9.3dp"
            android:layout_marginRight="11.3dp"
            android:layout_marginTop="8.0dp">

            <LinearLayout
                android:id="@+id/TitleContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.7dp"
                android:layout_marginRight="15.0dp"
                android:layout_marginTop="14.7dp"
                android:gravity="center_vertical"
                android:minHeight="25px"
                android:minWidth="25px"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="21.7dp"
                    android:layout_height="27.3dp"
                    android:src="@drawable/you_are_here"
                    />

                <TextView
                    android:id="@+id/topMenusTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14.7dp"
                    android:text="Top menus"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="30sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newStoresContainer">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7.7dp"
                android:layout_marginTop="14.0dp"
                android:text="New face"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30sp"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/newStoresRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:scrollbars="horizontal"
                android:layout_marginTop="18.0dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/festivalsContainer">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7.7dp"
                android:layout_marginTop="14.0dp"
                android:text="hot places"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30sp"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/festivalsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:scrollbars="horizontal"
                android:layout_marginTop="18.0dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
</com.yalantis.taurus.PullToRefreshView>
