<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:src="@drawable/default_foodtruck_featuregraphic"
        android:layout_width="match_parent"
        android:layout_height="228.7dp"
        android:id="@+id/imageView1" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout1">
        <Button
            android:text="Set as default"
            android:id="@+id/setCurrentImageAsMainImageButton"
            android:textAllCaps="false"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff00b5ff" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:id="@+id/AddOrRemoveOptionsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:text="+"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/button2"
                android:textColor="#ff00b5ff"
                android:background="#ffffff" />
            <Button
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/button3"
                android:textColor="#ff00b5ff"
                android:background="#ffffff" />
        </LinearLayout>
        <Button
            android:text="Done"
            android:id="@+id/button4"
            android:textAllCaps="false"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="185.3dp"
            android:layout_height="54.3dp"
            android:layout_marginBottom="30.7dp"
            android:textColor="#ffffffff" />
    </RelativeLayout>
</LinearLayout>